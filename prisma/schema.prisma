generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @map("_id")
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  address      String        @unique
  wagers       Wager[]
  transactions Transactions[]
}
